<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heycream.gui.MainMenuController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #fff5f7, #d3f3ff);">

    <Text text="🍦 HeyCream 🍦"
          layoutX="450" layoutY="180"
          style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-fill: #ff6699; -fx-stroke: white; -fx-stroke-width: 1;"
          textAlignment="CENTER">
        <translateX>-150</translateX>
    </Text>
    <VBox alignment="CENTER" spacing="20" layoutX="350" layoutY="220">
        
         <Button fx:id="startButton" text="Start Game" onAction="#onStartGame"
                style="-fx-font-size: 20px; 
                       -fx-font-weight: bold; 
                       -fx-background-color: #ffb6c1; 
                       -fx-text-fill: white; 
                       -fx-pref-width: 200px; 
                       -fx-background-radius: 10; 
                       -fx-border-radius: 10;
                       -fx-border-color: #ff6699; 
                       -fx-border-width: 2;"/>
        <Button fx:id="howToPlayButton" text="How to Play" onAction="#onHowToPlay"
                style="-fx-font-size: 20px; 
                       -fx-font-weight: bold; 
                       -fx-background-color: #aee8ff; 
                       -fx-text-fill: #003366; 
                       -fx-pref-width: 200px; 
                       -fx-background-radius: 10; 
                       -fx-border-radius: 10;
                       -fx-border-color: #66ccff; 
                       -fx-border-width: 2;"/>
        <Button fx:id="settingButton" text="Settings"
                style="-fx-font-size: 20px; 
                       -fx-font-weight: bold; 
                       -fx-background-color: #aee8ff; 
                       -fx-text-fill: #003366; 
                       -fx-pref-width: 200px; 
                       -fx-background-radius: 10; 
                       -fx-border-radius: 10;
                       -fx-border-color: #66ccff; 
                       -fx-border-width: 2;"/>
        <Button fx:id="exitButton" text="Exit" onAction="#onExit"
                style="-fx-font-size: 20px; 
                       -fx-font-weight: bold; 
                       -fx-background-color: #ff9999; 
                       -fx-text-fill: white; 
                       -fx-pref-width: 200px; 
                       -fx-background-radius: 10; 
                       -fx-border-radius: 10;
                       -fx-border-color: #ff4d4d; 
                       -fx-border-width: 2;"/>
    </VBox>
</AnchorPane>
