<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heycream.gui.HowToPlayController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #ffeef3, #e4f5ff);">

    <!-- Title -->
    <Text text="🍦 How to Play - HeyCream 🍦"
          layoutX="250" layoutY="80"
          style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #ff6699;"/>

    <!-- Scrollable instructions -->
    <ScrollPane layoutX="100" layoutY="120" prefWidth="700" prefHeight="370"
            style="-fx-background-color: transparent; -fx-border-color: transparent;" fitToWidth="true">

    <content>
        <TextArea fx:id="instructionsText"
                  editable="false" wrapText="true"
                  prefHeight="320" prefWidth="680"
                  style="-fx-font-family: 'Comic Sans MS';
                         -fx-font-size: 16px;
                         -fx-background-radius: 20;
                         -fx-background-color: #fffafc;
                         -fx-border-color: #f2ccd6;
                         -fx-border-radius: 20;
                         -fx-effect: dropshadow(gaussian, #ffd1dc, 6, 0, 0, 0);
                         -fx-padding: 20;"/>
    </content>
</ScrollPane>

    <!-- Back button -->
    <Button fx:id = "backButton"
            text="← Back to Menu"
            layoutX="370" layoutY="520" prefWidth="160" prefHeight="40"
            onAction="#onBackToMenu"
            style="-fx-background-color: #ff9da9; -fx-text-fill: white; -fx-font-family: 'Comic Sans MS';
                   -fx-font-size: 16px; -fx-background-radius: 20;"/>
</AnchorPane>
